packages:
  yum:
    git: []
    libjpeg-turbo-devel: []
    libpng-devel: []
    freetype-devel: []
    gcc-c++: []

commands:
  repo2:
    command: yum-config-manager --add-repo https://apt-mo.trafficmanager.net/yumrepos/mssql-rhel7-release/
  repo3:
    command: yum-config-manager --enable mssql-rhel7-preview
  repo4:
    command: wget "http://aka.ms/msodbcrhelpublickey/dpgswdist.v1.asc"
  repo5:
    command: rpm --import dpgswdist.v1.asc
  repo7:
    command: yum -y remove unixODBC
  repo8:
    command: yum update
  repo9:
    command: setenforce 0
  repo10:
    command: yum -y clean expire-cache
  repo11:
    command: yum -y --enablerepo=updates-testing update selinux-policy\*
  repo12:
    command: setenforce 1
  repo13:
    command: yum -y install msodbcsql









