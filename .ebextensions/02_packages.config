packages:
  yum:
    git: []
    python34-devel: []
    libjpeg-turbo-devel: []
    libpng-devel: []
    freetype-devel: []
    gcc-c++: []

commands:
  repo1:
    command: yum-config-manager --add-repo https://apt-mo.trafficmanager.net/yumrepos/mssql-rhel7-release/
  repo2:
    command: yum-config-manager --enable mssql-rhel7-preview
  repo3:
    command: yum update
  repo4:
    command: wget "http://aka.ms/msodbcrhelpublickey/dpgswdist.v1.asc"
  repo5:
    command: rpm --import dpgswdist.v1.asc
  repo7:
    command: yum -y remove unixODBC
  repo8:
    command: ACCEPT_EULA=Y yum -y install msodbcsql
  install_devtools:
    command: yum -y groupinstall 'Development tools'
